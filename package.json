        "faker": "4.1.0",
        "jest": "25.5.4",
        "jest-extended": "0.11.5",
        "prettier": "1.19.1",
        "rimraf": "2.6.2",
        "rosie": "2.0.1",
        "ts-jest": "25.5.1",
        "tslint": "6.1.2",
        "tslint-config-prettier": "1.18.0",
        "ts-loader": "8.0.4",
        "typedoc": "0.17.6",
        "typedoc-plugin-markdown": "2.2.17",
        "typescript": "3.8.3",
